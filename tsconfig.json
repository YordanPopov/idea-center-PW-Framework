{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": ".",
        "paths": {
            "@pages/*": ["./pages/*"],
            "@fixtures/*": ["./fixtures/*"],
            "@test-data/*": ["./test-data/*"]
        },
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": ["node", "playwright"]
    },
    "include": [
        "*.ts",
        "*.mts",
        "tests/**/*.ts",
        "fixtures/**/*.ts",
        "pages/**/*.ts",
        "helpers/**/*.ts",
        "enums/**/*.ts",
        "test-data/**/*.ts"
    ],
    "exclude": ["node_modules", "dist", "playwright-report", "test-results"]
}
